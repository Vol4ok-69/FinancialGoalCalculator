<Page x:Class="Finance.Pages.Registr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finance.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registr"
      Background="#F4F6F6">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

            <TextBlock Text="Регистрация" FontSize="28" FontFamily="Segoe UI" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25"/>
            <TextBlock Text="Логин" FontSize="16" FontFamily="Segoe UI" Margin="0,0,0,5"/>
            <TextBox x:Name="tbLogin" FontSize="16" FontFamily="Segoe UI" Padding="5" Margin="0,0,0,15"/>
            <TextBlock Text="Пароль" FontSize="16" FontFamily="Segoe UI" Margin="0,0,0,5"/>
            <PasswordBox x:Name="tbPassword" FontSize="16" FontFamily="Segoe UI" Padding="5" Margin="0,0,0,15"/>
            <TextBlock Text="Подтверждение пароля" FontSize="16" FontFamily="Segoe UI" Margin="0,0,0,5"/>
            <PasswordBox x:Name="tbVerifyPassword" FontSize="16" FontFamily="Segoe UI" Padding="5" Margin="0,0,0,30"/>
            <StackPanel Orientation="Vertical" Height="50" Width="200" HorizontalAlignment="Center">
                <Button x:Name="btnRegistration" Height="35" Content="Зарегистрироваться" Click="btnRegistration_Click" Style="{StaticResource LightOrangeButton}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
