<Page x:Class="Finance.Pages.GoalDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finance.Pages"
       mc:Ignorable="d"
      Title="GoalDetails"
      Background="#F4F6F6">

    <ScrollViewer Margin="30">
        <StackPanel Width="650" HorizontalAlignment="Left">

            <TextBlock Text="{Binding CurrentGoal.Name}"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,15"/>

            <StackPanel Style="{StaticResource InfoBlockStyle}">
                <TextBlock Text="Описание:" Style="{StaticResource HeaderTextBlockStyle}"/>
                <TextBlock Text="{Binding CurrentGoal.Description}"
                           TextWrapping="Wrap"
                           FontSize="16"/>
            </StackPanel>

            <Separator Margin="0,15"/>

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Приоритет" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock x:Name="tbPriorityName"
                               Text="{Binding CurrentGoal.Priority.Name}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Категория" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock Text="{Binding CurrentGoal.Category.Name}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Дедлайн" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock Text="{Binding CurrentGoal.Deadline, StringFormat='{}{0:dd MMMM yyyy}', ConverterCulture='ru-RU'}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>

            <Separator Margin="0,15"/>

            <StackPanel Margin="0,10">
                <TextBlock Text="Прогресс накопления" Style="{StaticResource HeaderTextBlockStyle}"/>

                <ProgressBar Height="14"
                             Maximum="{Binding CurrentGoal.TargetAmount}"
                             Value="{Binding CurrentGoal.CurrentAmount}"
                             Foreground="#27AE60"
                             Background="#ECF0F1"/>

                <TextBlock Margin="0,5,0,0"
                           FontSize="14"
                           Foreground="#7F8C8D">
                    <Run Text="{Binding CurrentGoal.CurrentAmount}"/>
                    <Run Text=" / "/>
                    <Run Text="{Binding CurrentGoal.TargetAmount}"/>
                </TextBlock>
            </StackPanel>

            <Separator Margin="0,15"/>

            <StackPanel x:Name="spEditStatus" Margin="0,10,0,20">
                <TextBlock Text="Текущий статус" Style="{StaticResource HeaderTextBlockStyle}"/>

                <ComboBox x:Name="cbEditStatus"
                          ItemsSource="{Binding AvailableStatuses}"
                          SelectedItem="{Binding SelectedStatus}"
                          DisplayMemberPath="Name"
                          SelectionChanged="cbEditStatus_SelectionChanged"
                          Width="220"
                          Style="{StaticResource ComboBoxStyle}">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                <Button Content="Сохранить"
                        x:Name="btnSave"
                        Visibility="Collapsed"
                        Click="btnSave_Click"
                        Style="{StaticResource SaveButton}"
                        Margin="0,0,10,0"/>

                <Button Content="Пополнить"
                        Click="btnAddContribution_Click"
                        Style="{StaticResource LightOrangeButton}"
                        Margin="0,0,10,0"/>

                <Button Content="Удалить"
                        Click="btnDelete_Click"
                        Style="{StaticResource DeleteButton}"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
