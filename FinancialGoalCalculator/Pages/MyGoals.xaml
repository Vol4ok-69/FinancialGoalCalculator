<Page x:Class="Finance.Pages.MyGoals"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finance.Pages"
      mc:Ignorable="d" 
      Title="MyGoals"
      Background="#F4F6F6">

    <Page.Resources>
        <DataTemplate x:Key="GoalCardTemplate">
            <Border BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    Margin="0,5"
                    Background="White"
                    HorizontalAlignment="Stretch">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="{Binding Name}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"/>

                            <TextBlock FontSize="12"
                                       Foreground="#95A5A6"
                                       Margin="0,4,0,0">
                                <Run Text="Приоритет: "/>
                                <Run Text="{Binding Priority.Name}"
                                     FontWeight="SemiBold"/>
                            </TextBlock>

                            <TextBlock FontSize="12"
                                       Foreground="#95A5A6">
                                <Run Text="Категория: "/>
                                <Run Text="{Binding Category.Name}"
                                     FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="{Binding Deadline, StringFormat='Дедлайн: {0:dd MMMM yyyy}', ConverterCulture='ru-RU'}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Right"/>

                            <TextBlock Text="{Binding Status.Name}"
                                       FontSize="12"
                                       Foreground="#2980B9"
                                       HorizontalAlignment="Right"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <ProgressBar Height="10"
                                     Maximum="{Binding TargetAmount}"
                                     Value="{Binding CurrentAmount}"
                                     Background="#ECF0F1"
                                     Foreground="#27AE60"/>

                        <TextBlock FontSize="12"
                                   Foreground="#7F8C8D"
                                   Margin="0,5,0,0">
                            <Run Text="{Binding CurrentAmount}"/>
                            <Run Text=" / "/>
                            <Run Text="{Binding TargetAmount}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Статус:"
                           Margin="0,0,10,0"
                           Foreground="#7F8C8D"/>

                <ComboBox x:Name="cbStatusFilter"
                          Width="220"
                          Height="30"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          ItemsSource="{Binding StatusList}"
                          SelectionChanged="FilterChanged"/>
            </StackPanel>

            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Сортировка:"
                           Margin="0,0,10,0"
                           Foreground="#7F8C8D"/>

                <ComboBox x:Name="cbSortBy"
                          Width="220"
                          Height="30"
                          SelectionChanged="FilterChanged">
                    <ComboBoxItem Content="По дате создания"/>
                    <ComboBoxItem Content="По дедлайну"/>
                    <ComboBoxItem Content="По приоритету (сначала высокий)"/>
                    <ComboBoxItem Content="По прогрессу"/>
                </ComboBox>
                <CheckBox x:Name="cbNearDeadline"
                  Content="Дедлайн ≤ 7 дней"
                  Margin="20,0,0,0"
                  VerticalAlignment="Center" Checked="FilterChanged" Unchecked="FilterChanged"/>
                <Button Content="Экспорт в JSON"
                    Width="140"
                    Height="30"
                    Margin="10,0,0,0" Click="BtnExportJson_Click"/>
            </StackPanel>
            
        </Grid>

        <Separator Grid.Row="1" Margin="0,0,0,15"/>

        <ListBox Grid.Row="2"
                 x:Name="GoalsListBox"
                 ItemsSource="{Binding GoalList}"
                 ItemTemplate="{StaticResource GoalCardTemplate}"
                 SelectionChanged="GoalsListBox_SelectionChanged"
                 Background="Transparent"
                 BorderThickness="0"
                 HorizontalContentAlignment="Stretch"/>
    </Grid>
</Page>
